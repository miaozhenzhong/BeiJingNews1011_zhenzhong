<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:background="@drawable/bottom_tab_bg"
        android:id="@+id/rg_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:text="首页"
            android:drawableTop="@drawable/rb_home_selector"

            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:drawablePadding="5dp"
            android:button="@android:color/transparent"
            android:background="@android:color/transparent"
            android:textColor="@drawable/rb_bottom_textcolor_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <RadioButton
            android:id="@+id/rb_newscenter"
            android:text="新闻"
            android:drawableTop="@drawable/rb_newscenter_selector"

            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:drawablePadding="5dp"
            android:button="@android:color/transparent"
            android:background="@android:color/transparent"
            android:textColor="@drawable/rb_bottom_textcolor_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <RadioButton
            android:id="@+id/rb_government"
            android:text="政要"
            android:drawableTop="@drawable/rb_government_selector"

            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:drawablePadding="5dp"
            android:button="@android:color/transparent"
            android:background="@android:color/transparent"
            android:textColor="@drawable/rb_bottom_textcolor_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <RadioButton
            android:id="@+id/rb_zhenzhong"
            android:text="振忠"
            android:drawableTop="@drawable/rb_zhenzhong_selector"

            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:drawablePadding="5dp"
            android:button="@android:color/transparent"
            android:background="@android:color/transparent"
            android:textColor="@drawable/rb_bottom_textcolor_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <RadioButton
            android:id="@+id/rb_setting"
            android:text="设置"
            android:drawableTop="@drawable/rb_setting_selector"

            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:drawablePadding="5dp"
            android:button="@android:color/transparent"
            android:background="@android:color/transparent"
            android:textColor="@drawable/rb_bottom_textcolor_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

    </RadioGroup>

</LinearLayout>